# Example environment configuration
# Copy this file to .env and modify the values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:5000
VITE_API_ENDPOINT=/get_ndvi_evi
# Set to true for development (uses Vite proxy), false for production (direct calls)
VITE_USE_PROXY=true

# Default coordinates for NDVI/EVI data (Bangladesh region)
VITE_DEFAULT_LON_MIN=88.7
VITE_DEFAULT_LAT_MIN=21.5
VITE_DEFAULT_LON_MAX=89.0
VITE_DEFAULT_LAT_MAX=22.0

# Default date range
VITE_DEFAULT_START_DATE=2023-01-01
VITE_DEFAULT_END_DATE=2023-03-01
